          hr
          ul.nav.nav-pills.flex-column.mb-auto
            li.nav-item
              a.nav-link.link-dark(href=route('users'))
                svg.bi.me-2(width='16' height='16')
                  use(xlink:href='#people-circle')
                | #{t('layouts.application.users')}
            if isAuthenticated()
              li.nav-item
                a.nav-link.link-dark(href=route('statuses'))
                  svg.bi.me-2(width='16' height='16')
                    use(xlink:href='#chat-quote-fill')
                  | #{t('layouts.application.statuses')}
              li.nav-item
                a.nav-link.link-dark(href=route('labels'))
                  svg.bi.me-2(width='16' height='16')
                    use(xlink:href='#geo-fill')
                  | #{t('layouts.application.labels')}
              li.nav-item
                a.nav-link.link-dark(href=route('tasks'))
                  svg.bi.me-2(width='16' height='16')
                    use(xlink:href='#cpu-fill')
                  | #{t('layouts.application.tasks')}
              li.nav-item
                +buttonTo(route('session'), 'delete')(class="btn nav-link" value=t('layouts.application.signOut'))
            else
              li.nav-item
                a.nav-link.link-dark(href=route('newSession'))
                  svg.bi.me-2(width='16' height='16')
                    use(xlink:href='#home')
                  | #{t('layouts.application.signIn')}
              li.nav-item
                a.nav-link.link-dark(href=route('newUser'))
                  svg.bi.me-2(width='16' height='16')
                    use(xlink:href='#gear-fill')
                  | #{t('layouts.application.signUp')}
        .container.wrapper.flex-grow-1

          each messages, type in reply.flash() || []
            each message in messages
              div.alert(class=`alert-${getAlertClass(type)}`)= message

          h1.my-4
            block header
          block content
