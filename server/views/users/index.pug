extends ../layouts/application.pug

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.fullName')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th
    tbody
      each user in users
        tr
          td= user.id
          td= `${user.firstName} ${user.lastName}`
          td= user.email
          td= formatDate(user.createdAt)
            if isAuthenticated()
              td
                a(href=`/users/${user.id}/edit`)= t('views.users.edit.submit')
                +buttonTo(`/users/${user.id}`, 'delete')(class="btn nav-link" value=t('views.users.delete.submit'))
