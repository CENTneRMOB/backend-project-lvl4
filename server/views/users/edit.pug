extends ../layouts/application2.pug

block header
  = t('views.users.exist.editing')

block content
  +formFor()(action=route('editUser', { id: user.id }) method='post')
    +input(user, 'firstName', errors)(type="text")
    +input(user, 'lastName', errors)(type="text")
    +input(user, 'email', errors)(type="text")
    +input(user, 'password', errors)(type="password")
    input(name='_method' type='hidden' value='patch')
    +submit(user)(value=t('views.users.exist.edit'))
